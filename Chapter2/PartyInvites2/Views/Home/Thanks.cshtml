@model PartyInvites2.Models.GuestResponse

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/Content/bootstrap-theme.css" />
    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <title>Thanks</title>
</head>
<body>
    @{ 
        try {
            WebMail.SmtpServer="smtp@example.com";
            WebMail.SmtpPort=587;
            WebMail.EnableSsl = true;
            WebMail.UserName="mySmptpUserName";
            WebMail.Password = "123";
            WebMail.From = "example@gmail.com";

            WebMail.Send("amna@gmail.com", "RSVP Response",
                Model.Name+"is"+((Model.WillAttend??false)?"":"not ") + "attending");



        }catch(Exception )
        {
            @:<b>Sorry Could not send email. An Error occured.</b>
        }

    }
    <div class="text-center"> 
        <h1>Thank you @Model.Name </h1>
        <div class="lead">
            @if (Model.WillAttend == true)
            {
                @:Its great that you are comming the drinks will be in the fridge!
            }
            else
            {
                @:It's Sorry to hear you wont be joining us.
            }
        </div>

</div>
</body>
</html>
